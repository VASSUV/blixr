<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:layout_width="match_parent">

    <ru.vassuv.blixr.ui.components.MutedVideoView
        android:clickable="false"
        android:id="@+id/videoView"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        tools:context="ru.vassuv.blixr.ui.fragment.auth.SearchFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/blixr_logo_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Описание title"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/handshake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/handshake"
            android:layout_marginTop="48dp"
            android:padding="24dp"
            android:background="@drawable/handshake_circle"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="72sp" />

        <View
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:src="@mipmap/bankid_white" />

        <android.support.v7.widget.CardView
            android:background="@drawable/button_white"
            android:foreground="?attr/selectableItemBackground"
            android:id="@+id/logIn"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:visibility="gone">

            <FrameLayout
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_width="match_parent">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Войти"
                    android:textAlignment="center"
                    android:textColor="@color/textColorLight"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/bankid_logo_blue" />

            </FrameLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>