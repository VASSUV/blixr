<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="ru.vassuv.blixr.ui.fragment.auth.SearchFragment">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/blixr_logo_colored" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/fontawesome_webfont"
            android:text="Описание title"
            android:textAlignment="center"
            android:textColor="@color/textColorLight"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/fontawesome_webfont"
            android:text="Если новый пользователь. дополнительный запрос, email пользователя. (с подтверждением"
            android:textAlignment="center"
            android:textColor="@color/textColorLight" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/fontawesome_webfont"
            android:hint="Ваш адрес электронной почты"
            android:inputType="textEmailAddress"
            android:maxLength="12"
            android:textAlignment="center"
            android:textColor="@color/textColorLight" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.v7.widget.CardView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_white"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:fontFamily="@font/fontawesome_webfont"
                android:text="Подтвердить"
                android:textAlignment="center"
                android:textColor="@color/textColorLight"
                android:textSize="18dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_white"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="12dp"
                android:fontFamily="@font/fontawesome_webfont"
                android:text="Отменить"
                android:textAlignment="center"
                android:textColor="@color/textColorLight"
                android:textSize="18dp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
